# Database
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Session Secret
SESSION_SECRET=your-secret-key-here

# SAML 2.0 Configuration for Zoho Directory IdP
# Service Provider (SP) settings - TheGunFirm CMS
SAML_SP_ENTITY_ID=urn:thegunfirm:cms
SAML_SP_ASSERTION_CONSUMER=https://app.thegunfirm.com/sso/saml/acs

# Identity Provider (IdP) settings - Zoho Directory
SAML_IDP_SSO_URL=https://accounts.zoho.com/samlauthrequest/your-org-id
SAML_IDP_ENTITY_ID=https://accounts.zoho.com/your-org-id
SAML_IDP_CERT_PEM="-----BEGIN CERTIFICATE-----\nYOUR_ZOHO_CERTIFICATE_HERE\n-----END CERTIFICATE-----"

# SAML Security settings
SAML_REQUIRE_SIGNED_ASSERTIONS=true
SAML_CLOCK_SKEW_SEC=300

# Optional SAML settings
SAML_IDP_SLO_URL=https://accounts.zoho.com/samlauthrequest/your-org-id/logout
SAML_SP_SLO_URL=https://app.thegunfirm.com/sso/saml/slo

# Other existing environment variables...
# Zoho OAuth
ZOHO_CLIENT_ID=your-zoho-client-id
ZOHO_CLIENT_SECRET=your-zoho-client-secret
ZOHO_ACCESS_TOKEN=your-zoho-access-token
ZOHO_REFRESH_TOKEN=your-zoho-refresh-token

# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key

# Authorize.Net
AUTHORIZE_NET_API_LOGIN_ID=your-api-login-id
AUTHORIZE_NET_TRANSACTION_KEY=your-transaction-key